<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ejercicio2901_3_listview2.MainActivity">
    />

    <TextView
        android:id="@+id/tvPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un ejercicio principal"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvSecundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un ejercicio secundario"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
